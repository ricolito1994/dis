<div class="modal modals-sm"  tabindex="2" id="residents-modal"  data-controller="ResidentsModalController">  
	<div class="modal-dialog"  style="min-width: 80%;">
		<div class="modal-content">
	      <!-- Modal Header -->
		  <div class="modal-header basic">
			<h4 class="modal-title">Resident Modal</h4>
			<button type="button" class="close" data-event="ResidentsModalController.click.onClose">&times;</button>
		  </div>
		  <!-- Modal body -->
		  <div class="modal-body" style="width:100%;">
			<div style="width:20%;float:left;">
				<div  id="qrcode" style="width:110%;">
				
				</div>
				<div >
				<B><span data-valuectrl="residentVars.RESIDENT_ID"></span></B>
				</div>
			</div>
			<div style="width:80%;float:left;max-height:50vh;overflow-y:scroll;">
				<div style="width:100%;">
					<div style="width:33%;float:left;padding-left:.33%" >
						LASTNAME <br>
						<input type="text" data-event='ResidentsModalController.change.changeValues' class="form-control" data-valuectrl="residentVars.LASTNAME" />
					</div>
					<div style="width:33%;float:left;padding-left:.33%" >
						FIRSTNAME <br>
						<input type="text" data-event='ResidentsModalController.change.changeValues' class="form-control" data-valuectrl="residentVars.FIRSTNAME" />
					</div>
					<div style="width:33%;float:left;padding-left:.33%" >
						MIDDLENAME <br>
						<input type="text" data-event='ResidentsModalController.change.changeValues' class="form-control" data-valuectrl="residentVars.MIDDLENAME" />
					</div>
					<div style="clear:both"></div>
				</div>
				<div style="width:100%;margin-top:2%;">
					<div style="width:76%;float:left;padding-left:.33%" >
						ADRESS <br>
						<input type="text" data-event='ResidentsModalController.change.changeValues' class="form-control" id="ResidentModalAddress" data-event="ResidentsModalController.change.changeValues" data-valuectrl="residentVars.ADDRESS" />
					</div>
					<div style="width:14.67%;float:left;padding-left:.33%" >
						BIRTHDAY <br>
						<input type="date" class="form-control" data-event="ResidentsModalController.change.calcAge" data-valuectrl="residentVars.BIRTHDAY" />
					</div>
					<div style="width:8.67%;float:left;padding-left:.33%" >
						AGE <br>
						<input type="text" class="form-control" data-valuectrl="currentAge" />
					</div>
					<div style="clear:both"></div>
				</div>
				
				<div style="width:100%;margin-top:2%;">
					<div style="width:25%;float:left;padding-left:.33%" >
						IS FAMILY LEADER <br>
						<select  class="form-control" data-valuectrl="residentVars.IS_FAMILY_LEADER"  data-event="ResidentsModalController.change.changefamilyleaderstat">
							<option value='1'>YES</option>
							<option value='0'>NO</option>
						</select>
					</div>
					<div style="width:25%;float:left;padding-left:.33%" >
						HAS SCHOLARSHIP <br>
						<select type="text" data-event='ResidentsModalController.change.changeValues' class="form-control" data-valuectrl="residentVars.HAS_SCHOLARSHIP" >
							<option value='1'>YES</option>
							<option value='0'>NO</option>
						</select>
					</div>
					<div style="width:25%;float:left;padding-left:.33%" >
						IS PATIENT <br>
						<select type="text" class="form-control"  data-event='ResidentsModalController.change.changeValues' data-valuectrl="" >
							<option value='0'>NO</option>
							<option value='1'>YES</option>
						</select>
					</div>
					<div style="width:25%;float:left;padding-left:.33%" >
						PUROK <br>
						<input type="text" class="form-control" data-valuectrl="PUROK_NAME" data-event="ResidentsModalController.click.searchPurok"/>
							
					</div>
					<div style="clear:both"></div>
				</div>
				<div id="fam-leader-container" style="width:33%;margin-top:2%;">
					FAMILY HEAD<BR>
					<input class="form-control" type="text" data-valuectrl="hh_leader" disabled />
						<a href='javascript:void(0)'  data-params='{"onevt":":onSelectBrgyHead","search":"resident_leader"}' data-event="ResidentsModalController.click.searchResident"><i class="icon-search"></i> Search</a>&nbsp;
						<a style="color:red;"   data-event="ResidentsModalController.click.removeBrgyHead" href='javascript:void(0)'><i class="icon-remove"></i> Remove</a>
				</div>
				<div id="fam-members-tbl-container" style="width:100%;margin-top:2%;">
					FAMILY MEMBERS  <a href="javascript:void(0);" data-event="ResidentsModalController.click.searchResident">+ADD</a><BR>
					<div>
						<table class="table" id="members-hh-table">
							<thead>
								<tr>
									<td>Fullname</td>
									<td>Birthday</td>
									<td>Age</td>
									<td>Action</td>
								</tr>
							</thead>
							<tbody>
								
							</tbody>
						</table>
					</div>
				</div>
				
			</div>
			<div style="clear:both"></div>
			
		  </div>
		  <!-- Modal footer -->
		  <div class="modal-footer">
			<button data-event="ResidentsModalController.click.save" class="btn btn-primary"><i class="icon-arrow-down" ></i> SAVE</button>
		  </div>
		</div>
	</div>
</div>